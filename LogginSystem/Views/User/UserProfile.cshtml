@model IEnumerable<LogginSystem.Models.ContactForm>

<link rel="stylesheet" href="~/css/StylSheetAdmin.css" />
<div class="container p-3 ">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary color">Kunder att kontakta</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="" asp-action="" class="btn btn-primary">
                <i class="fas fa-plus"></i>
            </a>
        </div>
    </div>
    <br /><br />
    @if (Model.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr class="color">
                    <th>Förnamn</th>
                    <th>Efternamn</th>
                    <th>Email</th>
                    <th>Telefon</th>
                    <th>Meddelande</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr class="color">
                    <td width="12%">@obj.Fname</td>
                    <td width="12%">@obj.Lname</td>
                    <td width="12%">@obj.Email</td>
                    <td width="12%">@obj.Number</td>
                    <td width="20%">@obj.Message</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">

                            <a asp-controller="" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2 ">
                                <i class="fas fa-wrench"></i> 
                            </a>
                            <a asp-controller="User" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2 ">
                                <i class="fas fa-minus"></i>   
                            </a>

                        </div>

                    </td>
                </tr>
                }
            </tbody>

        </table>
    }
    else
    {
        <p>Du har inga kunder som behövs kontaktas!</p>
    }
</div>
